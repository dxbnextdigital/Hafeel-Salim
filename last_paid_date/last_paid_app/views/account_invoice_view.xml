<odoo>


  <record id="view_invoice_last_payment" model="ir.ui.view">
            <field name="name">view.invoice.last.payment</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
<field name="payment_state" position="after">

<field name="last_paid_date"  decoration-danger="payment_state == 'not_paid'" decoration-warning="payment_state in ('partial', 'in_payment')" decoration-success="payment_state in ('paid', 'reversed')" optional="hide"></field>
<field name="paid_amount"  optional="hide"  decoration-danger="payment_state == 'not_paid'" decoration-warning="payment_state in ('partial', 'in_payment')" decoration-success="payment_state in ('paid', 'reversed')" ></field>
                </field>
            </field>
        </record>

<record id="view_account_move_add_payment_date_filter" model="ir.ui.view">
        <field name="name">account.move.filter</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
<filter name="due_date" position="after">
                    <filter name="last_paid_date" string="Paid Date" date="last_paid_date"/>

</filter>
        </field>
</record>






</odoo>
