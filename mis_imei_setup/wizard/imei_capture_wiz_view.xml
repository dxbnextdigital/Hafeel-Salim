<odoo>
     <data>
          <record id="imei_capture_wiz_view" model="ir.ui.view">
               <field name="name">imei capture wiz view</field>
               <field name="model">imei.capture.wiz</field>
               <field name="arch" type="xml">
                    <form string="Scan IMEI Number">
                         <div class="oe_title">
                              <field name="product_id" readonly="1"/>
                              <field name="partner_id" readonly="1"/>
                         </div>
                         <group>
                              <group>
                                   <field name="product_quantity" readonly="1"/>
                                   <field name="total_imei"/>
                              </group>
                         </group>
                         <group>
                         <notebook>
                              <page string="Scan IMEI Number">
                                   <field name="imei_line_ids">
                                        <tree editable="bottom">
                                             <field name="imei_id" invisible='1'/>
                                             <field name="imei" required='1'/>
                                        </tree>
                                   </field>
                              </page>
                         </notebook>
                    </group>
                         <footer>
                              <button name="save_imei" string="Save" type="object" 
                                      class="btn-primary"/>
                              <button string="Cancel" class="btn-default" special="cancel" />
                         </footer>
                    </form>
               </field>
          </record>
     </data>
</odoo>