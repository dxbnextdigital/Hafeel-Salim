<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_products_imei_tree" model="ir.ui.view">
        <field name="name">view product imei tree</field>
        <field name="model">product.imei</field>
        <field name="arch" type="xml">
            <tree create='0' edit='0'>
                <field name="imei"/>
                <field name="partner_id"/>
                <field name="invoice_id"/>
                <field name="invoice_date"/>
                <field name="product_id"/>
                <field name="product_barcode"/>
                <field name="product_brand"/>
                <field name="so_id" optional="hide"/>
                <field name="is_return" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_product_imei_form" model="ir.ui.view">
        <field name="name">view product_imei form</field>
        <field name="model">product.imei</field>
        <field name="arch" type="xml">
            <form create='0' edit='0'>
                <sheet>
                    <group>
                        <field name="imei"/>
                        <field name="partner_id"/>
                        <field name="invoice_id"/>
                        <field name="invoice_date"/>
                        <field name="product_id"/>
                        <field name="product_barcode"/>
                        <field name="product_brand"/>
                        <field name="so_id"/>
                        <field name="is_return"/>
                        <field name="user_id"/>
                        <field name="team_id"/>
                        <field name="location_id"/>
                        <field name="order_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_product_imei_search" model="ir.ui.view">
        <field name="name">view product imei search</field>
        <field name="model">product.imei</field>
        <field name="arch" type="xml">
            <search string="IMEI Numbers">
                <group expand="0" string="Group By">                                            
                    <filter string="Customer" name="partner_id" context="{'group_by': 'partner_id'}"/>
                    <filter string="Sales Team" name="team_id" context="{'group_by': 'team_id'}"/>
                    <filter string="Sales Executive" name="user_id" context="{'group_by': 'user_id'}"/>
                    <filter string="Location" name="location_id" context="{'group_by': 'location_id'}"/>
                    <filter string="Date Range" name="order_date" context="{'group_by': 'order_date'}"/>
                </group>     
                    <field name="imei"/>
                    <field name="partner_id"/>
                    <field name="invoice_id"/>
                    <field name="invoice_date"/>
                    <field name="product_id"/>
                    <field name="product_barcode"/>
                    <field name="product_brand"/>
                    <field name="so_id"/>
                    <field name="is_return"/>
                    <field name="user_id"/>
                    <field name="team_id"/>
                    <field name="location_id"/>
                    <field name="order_date"/>
        </search>
        </field>
    </record>

    <record id="action_product_imei" model="ir.actions.act_window">
        <field name="name">IMEI Numbers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.imei</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_product_imei" name="IMEI List" parent="sale.sale_order_menu" action="action_product_imei" sequence="5"/>
</odoo>