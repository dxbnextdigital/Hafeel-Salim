<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sales_source_location.view_order_form_inherit_ref_change"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='price_subtotal']" position="after">
                <button name="capture_imei" type="object" string="IMEI" class="btn-primary"/>                    
             </xpath>
             <xpath expr="//tree//field[@name='my_stock']" position="after">
                <field name="total_imei"/>                    
             </xpath>
             <xpath expr="//kanban[@class='o_kanban_mobile']/field[@name='price_unit']" position="before">
                <field name="total_imei"/>                    
             </xpath>
        </field>
    </record>

</odoo>