<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

            <record id="action_new_invoice_type" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="account.view_out_invoice_tree"/>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="domain">[('move_type', '=', 'out_invoice'),'|',('team_id.member_ids','in',uid),('team_id.user_id','=',uid)]</field>
            <field name="context">{'default_move_type': 'out_invoice'}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a customer invoice
              </p><p>
                Create invoices, register payments and keep track of the discussions with your customers.
              </p>
            </field>
        </record>


    <menuitem
        id="restricted_invoice_record"
        name="Invoices"
        parent="account.menu_finance_receivables"
        action="action_new_invoice_type"
        groups="invoice_restriction.group_invoice_base_on_salesteam_visible"
        sequence="2"
        />

  <record id="account.menu_action_move_out_invoice_type" model="ir.ui.menu">
<!--            <field name="groups_id" ref="invoice_restriction.group_invoice_administrator_visible"/>-->
              <field name="groups_id" eval="[(4, ref('invoice_restriction.group_invoice_administrator_visible'))]"/>

        </record>







    </data>
</odoo>