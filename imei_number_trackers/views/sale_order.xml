<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_screen_imei_main_view" model="ir.actions.client">
        <field name="name">Barcode Interface</field>
        <field name="tag">imei_number_trackers.SaleImeiScreen</field>
        <field name="target">fullscreen</field>
    </record>




 <record id="view_order_form_inherit_l10n_in_sale" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.l10n.in.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
                        <xpath expr="//button[@name='action_cancel']" position="after">
      <button name="%(sale_screen_imei_main_view)d"
                    string="IMEI"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-mobile"
                    context="{'default_sale_id': active_id}"  states="draft" attrs="{'invisible': [('is_imei_visible','!=',True)]}"/>

                            <field name="state" invisible="1"></field>
         <button name="action_import_imei_numbers" string="Import IMEI"   states="draft" type="object" attrs="{'invisible': [('is_imei_visible','!=',True)]}" ></button>
            <field name="is_imei_visible" invisible="1"></field>

                        </xpath>
        </field>
 </record>
</odoo>


