<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model='ir.ui.view' id='wizard_inv_product_history_form'>
            <field name="name">wizard.inv.product.history.form</field>
            <field name="model">wizard.inv.product.history</field>
            <field name="arch" type="xml">
                <form string="Wizard">
                        <group string="Date">
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                    <footer>
                        <button name="export_xls" type="object" default_focus="1"
                                string="Download Xls Report" class="oe_highlight"
                                context="{'xls_export':1}" icon="fa-download"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='wizard_inv_product_history_act'>
            <field name="name">Download Xls Report</field>
            <field name="res_model">wizard.inv.product.history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_inv_product_history_form"/>
            <field name="target">new</field>
        </record>


        <menuitem name="Download Sales Margin History"
                   parent="account.account_reports_management_menu"
                  id="export_inv_prdouct_history_excel"
                  action="wizard_inv_product_history_act"
                  sequence="70"
                  groups="account.group_account_manager"
                  />
    </data>

</odoo>
