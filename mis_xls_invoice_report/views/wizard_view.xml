<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model='ir.ui.view' id='wizard_invoice_form'>
            <field name="name">wizard.invoice.history.form</field>
            <field name="model">wizard.invoice.history</field>
            <field name="arch" type="xml">
                <form string="Wizard">
                        <group string="Date">
                            <group>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                            </group>
                        </group>
                    <footer>
                        <table width="100%">
                            <tr width="100%">
                                <td  width="50%" align="left">
                                    <button name="export_xls" type="object" default_focus="1"
                                string="Download Xls Invoice Report" class="oe_highlight"
                                context="{'xls_export':1}" icon="fa-download"/>
                                </td>
                                <!--td  width="34%" align="center">
                                    <button name="export_detail_xls" type="object" default_focus="1"
                                string="Download Xls Invoice Detail Report" class="oe_highlight"
                                context="{'xls_export':1}" icon="fa-download"/>
                                </td-->
                                <td  width="50%" align="right">
                                    <button string="Cancel" class="oe_link" special="cancel" />
                                </td>


                            </tr>

                        </table>


                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='wizard_invoice_act'>
            <field name="name">Download Xls Report</field>
            <field name="res_model">wizard.invoice.history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_invoice_form"/>
            <field name="target">new</field>
        </record>


        <menuitem name="Download Invoice History"
                  parent="account.account_reports_management_menu"
                  id="export_invoice_history_excel"
                  action="wizard_invoice_act"
                  groups="account.group_account_manager"
                  sequence="50"/>
    </data>

</odoo>
