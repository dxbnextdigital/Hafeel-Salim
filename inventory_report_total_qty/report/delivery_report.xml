<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <template id="total_report_delivery" inherit_id="stock.report_delivery_document">







       <xpath expr="//table[@name='stock_move_table']/tbody[last()]" position="after">
          <t t-if="o.state!='done'">
              <tr>
                <td colspan="10">
                    <p class="text-center">

                        <span>  Total Quantity : <t t-esc="o.total_qty_list"></t> PCS </span> </p>
                </td>



            </tr>





          </t>
        </xpath>






        <xpath expr="//table[@name='stock_move_line_table']/tbody[last()]" position="after">
        <t   t-if="o.move_line_ids and o.state=='done'">
            <tr>
                <td colspan="10">
                    <p class="text-center">

                        <span>  Total Quantity : <t t-esc="o.total_qty"></t> PCS </span> </p>
                </td>



            </tr>





        </t>
        </xpath>

    </template>


    </data>
</odoo>