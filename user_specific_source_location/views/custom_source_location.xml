<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
<record id="view_custom_source_location_user_form_inherit_ref_change" model="ir.ui.view">
        <field name="name">custom.source.location.inherit.ref.change</field>
        <field name="model">custom.source.location</field>
        <field name="inherit_id" ref="sales_source_location.custom_source_location_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stock_location_id']" position="after">
<field name="user_ids" widget="many2many_tags" ></field>
                          </xpath>
        </field>
</record>








         <record id="view_location_location_form" model="ir.ui.view">
        <field name="name">view_location_location_form</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form" />
        <field name="arch" type="xml">
            <field name="usage" position="after">
                    <field name="user_ids" widget="many2many_tags"  string="Allowed Users"></field>
            </field>
        </field>
    </record>









         <record id="custom_source_user_location_rule" model="ir.rule">
        <field name="name">Custom Source Location User Specific</field>
        <field name="model_id" ref="model_custom_source_location"/>
        <field name="domain_force">['|', ('user_ids', 'in', [user.id])]</field>
    </record>

        <record id="restrict_custom_location_rule" model="ir.rule">
        <field name="name">Custom location User Specific</field>
        <field name="model_id" ref="model_stock_location"/>
        <field name="domain_force">['|', ('user_ids', 'in', [user.id]), ('user_ids', '=', False)]</field>
    </record>



    </data>
</odoo>
